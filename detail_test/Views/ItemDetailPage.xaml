<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="detail_test.Views.ItemDetailPage"
             xmlns:local="clr-namespace:detail_test.ViewModels"
             BackgroundImage="{x:Static local:Framework.BackgroundImage}"
             Title="{Binding Title}">
    <ScrollView>
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Item.Text}" 
               FontSize="Small" 
               TextColor="{x:Static local:Framework.SecondaryColour}"/>
        <Button
                WidthRequest="320"
            HeightRequest = "180"/>
            <Button x:Name="ControlButton" 
                    Text="Play"
                    BackgroundColor="Lime"
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="Center"
                    Clicked="Handle_Clicked"/>
        <Label Text="{Binding Item.Description}" 
               FontSize="Small" 
               TextColor="{x:Static local:Framework.Complementary1Colour}"/>
    </StackLayout>
    </ScrollView>
</ContentPage>